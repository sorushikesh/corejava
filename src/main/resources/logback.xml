<configuration>
    <root level="INFO">
        <appender-ref ref="Console"/>
    </root>

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} - %highlight(%-5level) [%thread] %logger{36} - %msg%n%throwable
            </pattern>
        </encoder>
    </appender>

</configuration>
